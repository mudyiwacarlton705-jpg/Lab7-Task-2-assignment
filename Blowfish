package lab7.task2;

public class Blowfish extends Fish {
    private int diameter;

    public Blowfish() {}

    public Blowfish(String name, int age, double weight, String scaleColor, int diameter) {
        super(name, age, weight, scaleColor);
        this.diameter = diameter;
    }

    public Blowfish(String name, int diameter) {
        super(name);
        this.diameter = diameter;
    }

    public void eat() {
        System.out.println(getName() + " is nibbling food.");
    }

    public void getVoice() {
        System.out.println(getName() + " makes bubbles.");
    }

    public void inflate() {
        System.out.println(getName() + " inflates.");
    }

    public String toString() {
        return super.toString() + ", diameter: " + diameter;
    }
}
